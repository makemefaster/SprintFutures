        Back
    </a>

    <div class="mb-8 text-center">
        <h1 class="text-2xl font-bold text-white mb-1">Organiser Access</h1>
        <p class="text-slate-400 text-sm">Restricted Area</p>
    </div>

    <div class="bg-white w-full max-w-sm rounded-2xl shadow-2xl overflow-hidden p-8">
        
        <div class="space-y-4">
            <div>
                <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Event ID</label>
                <input type="text" id="adminId" placeholder="e.g. nats24" class="w-full p-3 bg-slate-50 border-2 border-slate-200 rounded-lg font-bold uppercase text-slate-800 focus:outline-none focus:border-indigo-500 transition-colors">
            </div>

            <div>
                <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Security PIN</label>
                <input type="password" id="adminPin" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢" class="w-full p-3 bg-slate-50 border-2 border-slate-200 rounded-lg font-bold text-slate-800 focus:outline-none focus:border-indigo-500 transition-colors">
            </div>

            <button onclick="goAdmin()" id="loginBtn" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-lg transition shadow-md flex justify-center items-center">
                <span>Login to Dashboard</span>
            </button>
        </div>

        <div class="mt-6 pt-6 border-t border-slate-100 text-center">
            <button onclick="goDemo()" class="text-xs font-bold text-orange-600 hover:text-orange-700 bg-orange-50 px-3 py-1 rounded-full transition">
                üöÄ Launch Demo Mode
            </button>
        </div>

    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.0.2/firebase-app.js";
        import { getDatabase, ref, get } from "https://www.gstatic.com/firebasejs/11.0.2/firebase-database.js";

        // Reuse your config
        const firebaseConfig = {
            apiKey: "AIzaSyAkTwI7TbJwXPbVQ2OrKjAAIaWLvyfuudc",
            authDomain: "sprintfutures.firebaseapp.com",
            databaseURL: "https://sprintfutures-default-rtdb.firebaseio.com",
            projectId: "sprintfutures",
            storageBucket: "sprintfutures.firebasestorage.app",
            messagingSenderId: "535060943616",
            appId: "1:535060943616:web:d15fc5225538eaeb3459e5",
            measurementId: "G-9XFQV3PLEV"
        };

        const app = initializeApp(firebaseConfig);
        const db = getDatabase(app);

        window.goAdmin = async function() {
            const id = document.getElementById('adminId').value.trim().toLowerCase();
            const pin = document.getElementById('adminPin').value.trim();
            const btn = document.getElementById('loginBtn');
            
            if(!id || !pin) return alert("Enter ID and PIN");

            // UI Loading State
            btn.innerHTML = `<svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>`;
            btn.classList.add('opacity-75', 'cursor-wait');

            try {
                // Fetch Meta Data for Event
                const snapshot = await get(ref(db, `events/${id}/meta`));
                const meta = snapshot.val();

                if (!meta) {
                    alert("‚ùå Event ID not found.");
                    resetBtn();
                    return;
                }

                // Check Admin PIN
                // Note: We check both Admin and Umpire PIN here.
                // If Umpire PIN is used, we could redirect to a restricted view, 
                // but for now, we grant access to admin.html (the dashboard).
                if (String(meta.adminPin) === pin || String(meta.umpirePin) === pin) {
                    window.location.href = `admin.html?event=${id}&auth=admin`;
                } else {
                    alert("‚ùå Incorrect PIN");
                    resetBtn();
                }
            } catch (e) {
                console.error(e);
                alert("Connection Error. Check internet.");
                resetBtn();
            }
        };

        window.goDemo = function() {
            const id = 'demo-' + Math.floor(1000 + Math.random() * 9000);
            window.location.href = `admin.html?event=${id}&auth=admin`;
        };

        function resetBtn() {
            const btn = document.getElementById('loginBtn');
            btn.innerHTML = `<span>Login to Dashboard</span>`;
            btn.classList.remove('opacity-75', 'cursor-wait');
        }
    </script>
